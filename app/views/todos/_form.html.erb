<%= form_with(model: todo, local: true) do |form| %>
<form>
  <% if todo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
      <% todo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group row">
    <div class="col-sm-1">Completed</div>
    <div class="col-sm-10">
      <div class="form-check">
        <%= form.check_box :completed, id: :todo_completed, class: "form-check-input" %>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :title, class: "col-sm-1 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :title, id: :todo_title, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group row">
    <%= form.label :description, class: "col-sm-1 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_area :description, id: :todo_title, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group row">
    <%= form.label :tags, class: "col-sm-1 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :tags, id: :todo_tags, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-outline-success" %>
  </div>
  <br />
</form>
<% end %>