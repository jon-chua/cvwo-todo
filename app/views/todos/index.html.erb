<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<h2>Incomplete</h2>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Description</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
	  <% if !todo.completed %>
        <tr>
          <td><%= form_for todo do |f| %><%= f.hidden_field :completed, :value => true %><%= f.submit 'Complete' %><% end %></td>
          <td><%= todo.title %></td>
          <td><%= todo.description %></td>
          <td><%= todo.tags %></td>
          <td><%= link_to 'Show', todo %></td>
          <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
          <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
	  <% end %>
    <% end %>
  </tbody>
</table>

<h2>Complete</h2>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Description</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
	  <% if todo.completed %>
        <tr>
          <td><%= form_for todo do |f| %><%= f.hidden_field :completed, :value => false %><%= f.submit 'Uncomplete' %><% end %></</td>
          <td><%= todo.title %></td>
          <td><%= todo.description %></td>
          <td><%= todo.tags %></td>
          <td><%= link_to 'Show', todo %></td>
          <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
          <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
	  <% end %>
    <% end %>
  </tbody>
</table>

